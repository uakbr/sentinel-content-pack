{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]"
    },
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "Sentinel workspace name"
      }
    },
    "workspaceResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Resource group containing Sentinel workspace"
      }
    }
  },
  "variables": {
    "azureSentinelConnectionName": "azuresentinel-connection",
    "azureAdConnectionName": "azuread-connection",
    "teamsConnectionName": "teams-connection",
    "officeConnectionName": "office365-connection",
    "defenderConnectionName": "defender-connection"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('azureSentinelConnectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Azure Sentinel Connection",
        "parameterValueType": "Alternative",
        "alternativeParameterValues": {},
        "customParameterValues": {},
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azuresentinel')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('azureAdConnectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Azure AD Connection",
        "parameterValueType": "Alternative",
        "alternativeParameterValues": {},
        "customParameterValues": {},
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azuread')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('teamsConnectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Microsoft Teams Connection",
        "parameterValueType": "Alternative",
        "alternativeParameterValues": {},
        "customParameterValues": {},
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'teams')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('officeConnectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Office 365 Connection",
        "parameterValueType": "Alternative",
        "alternativeParameterValues": {},
        "customParameterValues": {},
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'office365')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('defenderConnectionName')]",
      "location": "[parameters('location')]",
      "kind": "V1",
      "properties": {
        "displayName": "Microsoft Defender Connection",
        "parameterValueType": "Alternative",
        "alternativeParameterValues": {},
        "customParameterValues": {},
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'wdatp')]"
        }
      }
    }
  ],
  "outputs": {
    "azureSentinelConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('azureSentinelConnectionName'))]"
    },
    "azureAdConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('azureAdConnectionName'))]"
    },
    "teamsConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('teamsConnectionName'))]"
    },
    "officeConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('officeConnectionName'))]"
    },
    "defenderConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('defenderConnectionName'))]"
    }
  }
}

